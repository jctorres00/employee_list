<%= link_to("<< Back to List", departments_path, :class => 'back-link') %>

<div class="departments show">
  <h2>Show Department</h2>

  <table summary="Department detail view">
    <tr>
      <th>Id</th>
      <td><%= @department.id %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @department.name %></td>
    </tr>
    <tr>
      <th>Employees</th>
      <td><%= @department.employees.size %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @department.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @department.updated_at %></td>
    </tr>
  </table>

</div>
