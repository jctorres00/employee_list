<div class="employees delete">
  <h2>Delete Employee</h2>

  <%= form_for(@employee, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this employee?</p>

    <p class="reference-name"><%= f.object.last_name %> <%= f.object.first_name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Employee") %>
    </div>

  <% end %>
</div>
