<!DOCTYPE html>
<html>
  <head>
    <title>Management: <%= @page_title || "Admin Area" %></title>
     <%= stylesheet_link_tag('application', :media => 'all') %>
           <!-- Change application to admin to change css files-->

   </head>
  <body>

      <div id="header">
          <h1>Management Area</h1>
      </div>


      <div id="main">

                  <div id="navigation">
                     <%= render(:partial => 'layouts/navigation', :locals => { :departments => @departments} ) %>
                  </div>


          <% if !flash[:notice].blank? %>
          <div class="notice">
            <%= flash[:notice] %>
          </div>
         <% end %>

        <div id="content">
            <%= yield %>
        </div>

      </div>

      <div id="footer">
          <p id="copyright">&copy; jctorres</p>
      </div>

  </body>
</html>
